# Anthropic API Key for AI-powered content moderation and data updates
# Get your API key from: https://console.anthropic.com/
# Without this key, only basic regex filtering will work (no auto-updates)
ANTHROPIC_API_KEY=your_api_key_here

# GitHub Token for auto-committing data updates
# Create a Personal Access Token: https://github.com/settings/tokens
# Required scopes: repo (full control of private repositories)
GITHUB_TOKEN=your_github_token_here

# GitHub Repository (format: username/repo)
GITHUB_REPO=slaze929/FinanceTrackingMap

# API Key for manual update endpoint protection
# Generate a random string for security
UPDATE_API_KEY=your_random_api_key_here

# Update settings
UPDATE_ENABLED=true
UPDATE_ON_STARTUP=false
UPDATE_CRON=0 3 * * 0
